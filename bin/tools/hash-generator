#!/bin/bash

# shellcheck disable=SC1091
# shellcheck source=../shell-common
source "${SHELL_HOME}/shell-common"

string="${1:-}"

if [ -z "${string}" ]; then
  error_exit "An error occurred, the value argument is empty!"
fi

output "String: ${string}" "info"

output "[md5]: ${COLOR_GREEN}$(echo -n "${string}" | openssl dgst -md5)" "success"
output "[sha256]: ${COLOR_GREEN}$(echo -n "${string}" | openssl dgst -sha256)" "success"
output "[sha256(binary) + base64]: ${COLOR_GREEN}$(echo -n "${string}" | openssl dgst -binary -sha256 | openssl base64)" "success"
