#!/bin/bash

# shellcheck disable=SC1091
# shellcheck source=../shell-common
source "${SHELL_HOME}/shell-common"

string="${1:-}"

if [ -z "${string}" ]; then
  error_exit "An error occurred, the value argument is empty!"
fi

output "String: ${string}" "info"

