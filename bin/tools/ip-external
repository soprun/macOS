#!/bin/bash

# shellcheck disable=SC1091
# shellcheck source=../shell-common
source "${SHELL_HOME}/shell-common"

# USAGE:
# ip-external [default=false] - ipv4
# ip-external true - ipv6

ip_version=4

if [ "$(if_boolean "${1:-false}")" = true ]; then
  ip_version=6
fi

error_exit "${ip_version}"

#select os in "linux" "windows" "mac"; do
#  echo "${os}"
#  break
#done

output "IP version: ${ip_version}" "debug"

# https://icanhazip.com
# https://ifconfig.co/ip

ip_address=$(
  curl \
    --ipv${ip_version} \
    --connect-timeout 10 \
    --max-time 15 \
    --http2 \
    --fail \
    --silent \
    --show-error \
    --location \
    --request GET https://ifconfig.co/ip \
    --header "Accept: application/json" \
    2>/dev/null | tr -d '\n '
)

if test -z "${ip_address}"; then
  error_exit "An error occurred while receiving a response from an external server!"
fi

printf "%s" "${ip_address}"

exit $?
